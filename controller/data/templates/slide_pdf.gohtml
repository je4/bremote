<html>
<head>
    <title>
        Impressions from HGK Archive
    </title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: black;
            overflow: hidden;
            cursor: none;
        }
        #heading_w {
            position: fixed;
            bottom: 5px;
            right: 5px;
            color: white;
            font-size: 36px;
            font-family: "arial";
        }
        #qrcode {
            position: fixed;
            bottom: 50px;
            right: 2px;
            padding:25px;
            background-color: white;
        }
        #heading_b {
            position: fixed;
            bottom: 2px;
            right: 2px;
            color: black;
            font-size: 36px;
            font-family: "arial";
        }
        .slides {
            display: none;
            width: 100%;
        }

    </style>
    <!-- jQuery 1.9.1 or above -->
    <script src="https://ba14ns21403.fhnw.ch/mediaserver/app/vendor/dflip/js/libs/jquery.min.js" type="text/javascript"></script>
    <!-- Flipbook main Js file -->
    <script src="https://ba14ns21403.fhnw.ch/mediaserver/app/vendor/dflip/js/dflip.js" type="text/javascript"></script>

    <!-- script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script -->
    <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.js"></script>

    <script>
        var qrcode;
        var pages = [
            [[range $val := .pages]]"[[$val.masterurl]]",
            [[end]]
        ]
        var codes = [
            [[range $val := .pages]]"[[$val.qrcode]]",
            [[end]]
        ]
        var delays = [
            [[range $val := .pages]]"[[$val.delay]]000",
            [[end]]
        ]
        var flipBook;
        var pageCount = 0;
        var lastTime = Date.now();

        var nextPage = function() {
            lastTime = Date.now();
            var currentPage = flipBook.target._activePage || flipBook.object._activePage;
            if( currentPage == pageCount ) {
                setTimeout(simplePages, [[.delay]]000);
            } else {
                flipBook.next()
                setTimeout(nextPage, [[.delay]]000);
            }
        };

        var onReady = function () {
            lastTime = Date.now();
            pageCount = flipBook.target.pageCount || flipBook.object.pageCount;
            setTimeout(nextPage, [[.delay]]000);
        };

        var pdfOptions = {
            height:'100vw',
            height:'100vh',
            backgroundColor:'#[[.BackgroundColor]]',
            autoPlay:false,
            autoPlayStart:false,
            onReady: onReady,
        };
        var simplePages = function () {
            lastTime = Date.now();
            count++;
            if (count > pages.length) {
                location.reload();
                count = 1;
            }

            var code = codes[count-1];
            if( code == "<no value>" ) {
                code = pages[count-1];
            }

            if( flipBook != null ) {
                flipBook.dispose();
            }
            $("#daPDF").empty();
            flipBook = $("#daPDF").flipBook(pages[count-1], pdfOptions);

            document.getElementById('heading_b').innerText = code;
            document.getElementById('heading_w').innerText = code;
            qrcode.clear();
            qrcode.makeCode(code);
        };

        var safetyLoop = function () {
            var now = Date.now();
            if(( now - lastTime ) > [[.delay]]000*3 )
            {
                simplePages();
            }
            setTimeout(safetyLoop, [[.delay]]000*4);
        };

        document.addEventListener("DOMContentLoaded", function(){
            qrcode = new QRCode("qrcode", {
                text: "",
                width: 200,
                height: 200,
                colorDark : "#000000",
                colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.H
            });
            simplePages();
            setTimeout(safetyLoop, [[.delay]]000*4);
        });

        var count = 0;

    </script>
</head>
<body>


<div id="daPDF"></div>
<div id="qrcode"></div>
<div id="heading_b">
    [[.title]]
</div>
<div id="heading_w">
    [[.title]]
</div>

</body>
</html>
